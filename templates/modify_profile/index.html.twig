{% extends 'base.html.twig' %}

{% block title %}Hello ModifyProfileController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Modifer votre profile </h1>
    {{ form_start(modifyForm) }}

        {{ form_row(modifyForm.firstName) }}
        {{ form_row(modifyForm.lastName) }}
        {{ form_row(modifyForm.image) }}
        {{ form_row(modifyForm.instruments) }}


    <button type="submit" class="btn btn-primary">Modifier</button>
    {{ form_end(modifyForm) }}
</div>

{% endblock %}

