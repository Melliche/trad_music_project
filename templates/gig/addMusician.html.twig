{% extends 'base.html.twig' %}

{% block title %} {{ gig.pub.name }}{% endblock %}

{% block body %}
    <section class="container">
        <h3>Added new musician to {{ gig.pub.name }} !</h3>
        <h4>welcome {{ musician.fullName }}, You're now registered on {{ gig.pub.name }} Gig at {{ gig.pub.address }}
            {{ gig.dateStart|date('Y-m-d') }}</h4>
        {% for participant in gig.participants %}
            {{ participant.Instrument.name }}
        {% endfor %}

        {% for instrument in musician.instruments %}
            <h3>{{ instrument.name }}</h3>
        {% endfor %}
    </section>

{% endblock %}