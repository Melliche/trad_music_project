{% extends 'base.html.twig' %}

{% block title %}Pub{% endblock %}

{% block body %}

    <section class="container">
        <h1>Pub</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pub.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pub.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ pub.image }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ pub.address }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ pub.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ pub.city }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_pub_index') }}">back to list</a>

        <a href="{{ path('app_pub_edit', {'id': pub.id}) }}">edit</a>
        {{ include('pub/_delete_form.html.twig') }}

    </section>


    <section class="container">
        <h2>Next gigs in {{ pub.name }}</h2>

        <div class="grid">
            {% for gig in gigs %}
                <article class="card">
                    <h3>{{ gig.pub.name }}</h3>
                    <time datetime="{{ gig.dateStart|date('Y-m-d h:i') }}">
                        {{ gig.dateStart|date('l jS \\o\\f F \\a\\t g:i a') }}
                    </time>
                    <a href="{{ path('gig_detail', {'id': gig.id}) }}" class="btn btn-primary">See more</a>
                </article>
            {% endfor %}
        </div>
    </section>

{% endblock %}
